<link href="~/StyleSheet2.css" rel="stylesheet" />
<link href="~/StyleSheet3.css" rel="stylesheet" />

@{
    ViewBag.Title = "Courier";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Courier Registration</h3>
    </div>
    
    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Courier Details</h3>
        </div>
        <div class="panel-body">
            @*<div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Courier ID:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="" readonly>
                </div>
            </div>*@
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Courier Full Name:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Courier Full Name">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Courier Company:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Courier Company">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Description:<span class="label label-default"></span></span></h4>
                    <textarea class="form-control" placeholder="Description" rows="5" id="comment"></textarea>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Username:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Username">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Password:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Password">
                </div>
                @*<div class="col-md-4">
                    <h4><span style="font-weight:bold">Confirm Password:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Confirm Password">
                </div>*@
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">User Role:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>Viewer</option>
                        <option>System Administrator Access</option>
                        <option>General Employee Access</option>
                        <option>Customer Access</option>
                        <option>Courier Access</option>
                    </select>
                </div>
            </div>
        </div>
    </div>       

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Courier - Contact Person Details</h3>
        </div>
        <div class="panel-body">
            <div class="col-xs-12" style="height:5px;"></div>
            <table class="table table-bordered">
                <thead style="background-color: rgb(171,7,46);color:white">
                    <tr>
                        <th scope="col">Contact Person</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fax</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>
                            <input class="form-control" type="text" placeholder="Full Name"> 
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Contact Number">  
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Email">  
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Fax">
                        </td>
                        <td>
                            <span class="glyphicon glyphicon-remove-circle" style="color:rgb(171, 7, 46);font-size:25px;text-align:center"></span> 
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="col-xs-12" style="height:5px;"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-plus" style="color:white"></span>  Add New Contact Person</button>
                    </div>
                </div>
                @*<div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-plus" style="color:white"></span>  Add existing contact person</button>
                    </div>
                </div>*@
            </div>
        </div>
    </div>  

    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Add Courier</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-refresh" style="color:white"></span>  Clear All Fields</button>
            </div>
        </div>
    </div>
</div>

