
<script src="https://code.jquery.com.jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

<link href="~/StyleSheet1.css" rel="stylesheet" />
<link href="~/StyleSheet2.css" rel="stylesheet" />
<link href="~/StyleSheet3.css" rel="stylesheet" />

@{
    ViewBag.Title = "Warehouse";
}


<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Add Warehouse</h3>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Warehouse Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Warehouse Name:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Warehouse Name" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Description:<span class="label label-default"></span></span></h4>
                    <textarea class="form-control" placeholder="Description" rows="5" id="comment"></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Warehouse Address Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Address:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="Address" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Address Type:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>Shipping</option>
                        <option>Residential</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">City:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>Pretoria</option>
                        <option>Johanessburg</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Suburb:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>Centurion</option>
                        <option>Morelata Park</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Postal Code:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>0157</option>
                        <option>0127</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Contact Person Details</h3>
        </div>
        <div class="panel-body">
            <div class="col-xs-12" style="height:5px;"></div>
            <table class="table table-bordered">
                <thead style="background-color: rgb(171,7,46);color:white">
                    <tr>
                        <th scope="col">Contact Person</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fax</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>
                            <input class="form-control" type="text" placeholder="Full Name">
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Contact Number">
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Email">
                        </td>
                        <td>
                            <input class="form-control" type="text" placeholder="Fax">
                        </td>
                        <td>
                            <span class="glyphicon glyphicon-remove-circle" style="color:rgb(171, 7, 46);font-size:25px;text-align:center"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="col-xs-12" style="height:5px;"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-plus" style="color:white"></span>  Add New Contact Person</button>
                    </div>
                </div>
                @*<div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-plus" style="color:white"></span>  Add existing contact person</button>
                    </div>
                </div>*@
            </div>
        </div>
    </div>  

    

    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Add Warehouse</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-refresh" style="color:white"></span>  Clear All Fields</button>
            </div>
        </div>
    </div>
</div>