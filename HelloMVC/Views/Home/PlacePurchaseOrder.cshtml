
<script src="https://code.jquery.com.jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

@{
    ViewBag.Title = "PlacePurchaseOrder";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Place Purchase Order</h3>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Supplier Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Supplier Name:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Supplier Name" aria-describedby="basic-addon1" readonly>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Contact Number:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Contact Number" aria-describedby="basic-addon1" readonly>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Email:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon1" readonly>
                </div>
            </div>
            <div class="col-xs-12" style="height:18px;"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Add Supplier</button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-remove" style="color:white"></span>  Remove Supplier</button>
                    </div>
                </div>
            </div>
         </div>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Order Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                @*<div class="col-md-4">
                    <h4><span style="font-weight:bold">Order Number:<span class="label label-default"></span></span></h4>
                    <input class="form-control" type="text" placeholder="" readonly>
                </div>*@
                <div class="col-md-2">
                    <h4><span style="font-weight:bold">Order Date:<span class="label label-default"></span></span></h4>
                    <div class="input-append date" id="datetimepicker" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                        <input class="span2" style="height:33px" size="16" type="text" value="14-06-2018">
                        <span class="add-on"><i class="icon-remove"></i></span>
                        <span class="add-on"><i class="icon-th"></i></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group" style="margin-top:28px">
                        <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-plus-sign" style="color:rgb(171, 7, 46)"></span><span style="color:rgb(171, 7, 46)"> Add Product To Order</span></a>
                    </div>
                </div>
            </div>
            <div class="col-xs-12" style="height:18px;"></div>
            <table class="table table-bordered">
                <thead style="background-color: rgb(171,7,46);color:white">
                    <tr>
                        <th scope="col">Item Number</th>
                        <th scope="col">Product ID</th>
                        <th scope="col">Product Item</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total price of product</th>
                        <th scope="col">Remove product</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td> </td>
                        <td> </td>
                        <td> </td>                      
                        <td>
                            <input type="number" style="height:33px" value="1" data-decimals="0" min="1" max="2000" step="1" />
                        </td>
                        <td> </td>
                        <td>
                            <span class="glyphicon glyphicon-remove-circle" style="color:rgb(171, 7, 46);font-size:25px;text-align:center"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="col-xs-12" style="height:20px;"></div>

            <div class="row">
                <div class="col-md-2">
                    <h4><span style="font-weight:bold">Total Price:<span class="label label-default"></span></span></h4>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" placeholder="Total Price" aria-describedby="basic-addon1" readonly>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Place Purchase Order</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-refresh" style="color:white"></span>  Clear All Fields</button>
            </div>
        </div>
    </div>
</div>

