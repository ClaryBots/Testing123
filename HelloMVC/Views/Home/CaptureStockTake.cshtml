
<script src="https://code.jquery.com.jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

@{
    ViewBag.Title = "CaptureStockTake";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Capture Stock Take</h3>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Capture Stock Take</h3>
        </div>
        <div class="panel-body">
            <div class="col-xs-12" style="height:10px;"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="btn-group" role="group" aria-label="...">
                        <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-plus" style="color:white"></span>  Add Products</button>
                    </div>
                </div>
            </div>

            <div class="col-xs-12" style="height:25px;"></div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h4><span style="font-weight:bold">Filter By:<span class="label label-default"></span></span></h4>
                            <select class="form-control form-control-sm">
                                <option>Ascending</option>
                                <option>Descending</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <h4><span style="font-weight:bold">Sort By:<span class="label label-default"></span></span></h4>
                            <select class="form-control form-control-sm">
                                <option>Supplier Back Order Number</option>
                                <option>Order Number</option>
                                <option>Order Date</option>
                                <option>Supplier Name</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12" style="height:25px;"></div>

                    <table class="table table-bordered">
                        <thead style="background-color: rgb(171,7,46);color:white">
                            <tr>
                                <th scope="col">Product ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Warehouse A</th>
                                <th scope="col">Warehouse B</th>
                                <th scope="col">Total</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td>
                                    <span class="glyphicon glyphicon-remove-circle" style="color:rgb(171, 7, 46);font-size:25px;text-align:center"></span> 
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="btn-group" role="group" aria-label="...">
                                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Capture Stock Take</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

