
<script src="https://code.jquery.com.jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

<link href="~/StyleSheet1.css" rel="stylesheet" />
<link href="~/StyleSheet2.css" rel="stylesheet" />
<link href="~/StyleSheet3.css" rel="stylesheet" />

@{
    ViewBag.Title = "MaintainCustomers";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Edit My Profile</h3>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Customer Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Name:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" name="customerName" placeholder="Name" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Surname:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Surname" aria-describedby="basic-addon1">
                </div>
            </div>
            <h4></h4>
            <h4><span style="font-weight:bold">Date of birth:<span class="label label-default"></span></span></h4>
            <div class="input-append date" id="datetimepicker" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                <input class="span2" style="height:33px" size="16" type="text" value="00-00-0000">
                <span class="add-on"><i class="icon-remove"></i></span>
                <span class="add-on"><i class="icon-th"></i></span>
            </div>
            <h4></h4>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Contact Number:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Contact number" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Email:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Address:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Address" aria-describedby="basic-addon1">
                </div>
            </div>
            <!-- Split button -->
            <h4></h4>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Gender:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Language:<span class="label label-default"></span></span></h4>
                    <select class="form-control form-control-sm">
                        <option>English</option>
                        <option>Afrikaans</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Username:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Password:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Password" aria-describedby="basic-addon1">
                </div>
            </div>

            <div class="col-xs-12" style="height:25px;"></div>

            <table class="table table-bordered">
                <thead style="background-color: rgb(171,7,46);color:white">
                    <tr>
                        <th scope="col">Contact Person</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fax</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td> </td>
                        <td>
                            <span class="glyphicon glyphicon-remove-circle" style="color:rgb(171, 7, 46);font-size:25px;text-align:center"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Save Changes</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-refresh" style="color:white"></span>  Clear All Fields</button>
            </div>
        </div>
    </div>
</div>

