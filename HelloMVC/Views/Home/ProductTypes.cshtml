
<script src="https://code.jquery.com.jquery.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

@{
    ViewBag.Title = "ProductTypes";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h3>Add Product Type</h3>
    </div>

    <div class="panel panel-default" style="width:1200px">
        <div class="panel-heading">
            <h3 class="panel-title">Product Type Details</h3>
        </div>
        <div class="panel-body">  
            <div class="row">
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Product Type Name:<span class="label label-default"></span></span></h4>
                    <input type="text" class="form-control" placeholder="Product Type Name" aria-describedby="basic-addon1">
                </div>
                <div class="col-md-4">
                    <h4><span style="font-weight:bold">Description:<span class="label label-default"></span></span></h4>
                    <textarea class="form-control" style="width:400px" placeholder="Description" rows="5" id="comment"></textarea>
                </div>
            </div>     
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-ok" style="color:white"></span>  Add Product Type</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default" id="buttons"><span class="glyphicon glyphicon-refresh" style="color:white"></span>  Clear All Fields</button>
            </div>
        </div>
    </div>
</div>

